<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:paddingBottom="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/white_bg_layout"
        >

        <TextView
            android:id="@+id/pdfName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/size"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/size"
            android:fontFamily="@font/poppins"
            android:text="BookExe.pdf"
            android:textColor="#000000"
            android:paddingStart="5dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customize"
            android:textColor="#227093"
            android:textSize="15dp"
            android:id="@+id/text_customize"
            android:fontFamily="@font/poppins"
            android:layout_below="@id/pdfName"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pdfName"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/text_customize"
            android:src="@drawable/arrow_down" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="25 mb"
            android:textColor="#000000"
            android:id="@+id/size"
            android:textSize="15dp"
            android:layout_marginRight="60dp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/size"
            android:layout_alignStart="@+id/size"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="â‚¹: 23"
            android:textColor="#000000"
            android:textSize="15dp" />

