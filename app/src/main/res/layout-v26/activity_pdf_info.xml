                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/smallcirclewhite"
                    android:layout_marginTop="14dp">
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
