                    android:layout_height="37dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:elevation="10dp"
                    android:background="@drawable/blue_background_texts">

                    <Spinner
