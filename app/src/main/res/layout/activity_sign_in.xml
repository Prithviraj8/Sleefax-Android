<!--        android:fontFamily="@font/poppins" />-->

    <TextView
        android:id="@+id/mobilenumTV"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignStart="@id/phoneRL"
        android:layout_alignTop="@id/phoneRL"
        android:layout_marginLeft="150dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:text="Mobile Number"
        android:textColor="#227093"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:visibility="gone"/>






    <Button
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/login_buttons"
        android:layout_below="@id/phoneRL"
        android:layout_marginTop="40dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:id="@+id/SignIn"
        android:elevation="5dp"
        android:visibility="gone" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/SignIn"
        android:id="@+id/signinRL"
        android:layout_marginTop="38dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Or Sign In using :"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/poppins"
            android:id="@+id/signinTV"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signinTV"
            android:background="@drawable/signin_bg"
            android:src="@drawable/facebook_icon"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:elevation="5dp"
            android:id="@+id/facebookBtn"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@id/signinTV" />


<!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/signin_bg"-->
<!--            android:src="@drawable/google_icon"-->
