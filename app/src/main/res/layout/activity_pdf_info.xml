<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pdfsettingsRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PdfInfo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pdfsettingsRL2">

        <View
            android:id="@+id/view19"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/storesview" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/file_settings"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.498" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/w" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollViewPdfs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pdfsettingsRL2"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/scrollDownPdf"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/PageCount"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/PageCount"
                android:background="@drawable/ripple_effect"
                android:visibility="gone"
                app:srcCompat="@drawable/downarrow" />


            <Button
                android:id="@+id/pdfDone"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewPdfBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="@string/DonePageBtn"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Pdf_Black_White"
                android:layout_alignTop="@+id/Pdf_Black_White"
                android:layout_alignEnd="@+id/Pdf_Black_White"
                android:layout_alignBottom="@id/Pdf_Black_White"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/bwimg" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Pdf_Colors"
                android:layout_alignTop="@+id/Pdf_Colors"
                android:layout_alignEnd="@id/Pdf_Colors"
                android:layout_alignBottom="@id/Pdf_Colors"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/colorimg" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/select_color_format"
                android:textColor="#85000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/Pdf_Black_White"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:textAlignment="center"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="@+id/Pdf_Colors"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <View
                android:id="@+id/Pdf_Colors"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:textAlignment="center"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView3" />

            <TextView
                android:id="@+id/Copies"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@+id/Pdf_Black_White"
                android:layout_alignEnd="@+id/Pdf_Black_White"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/orderinfoviews"
                android:padding="5dp"
                android:text="@string/copies"
                android:textAlignment="center"
                android:textColor="#3D3D3D"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/PDF_copies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pdf_Black_White" />

            <EditText
                android:id="@+id/PDF_copies"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_below="@+id/Pdf_Colors"
                android:layout_alignStart="@+id/Pdf_Colors"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/Copies"
                android:inputType="number"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.601"
                app:layout_constraintStart_toEndOf="@+id/Copies"
                app:layout_constraintTop_toBottomOf="@+id/Pdf_Colors" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_below="@+id/Copies"
                android:layout_alignStart="@+id/Copies"
                android:layout_alignEnd="@+id/Copies"
                android:layout_marginStart="0dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/orderinfoviews"
                android:padding="5dp"
                android:text="Select Page Size"
                android:textAlignment="center"
                android:textColor="#3D3D3D"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Copies"
                app:layout_constraintStart_toStartOf="@+id/Copies"
                app:layout_constraintTop_toBottomOf="@+id/Copies" />

            <Spinner
                android:id="@+id/sizeSpinner"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/PDF_copies"
                android:layout_alignTop="@+id/textView7"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/PDF_copies" />

            <Spinner
                android:id="@+id/orientationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/sizeSpinner"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignEnd="@+id/sizeSpinner"
                android:layout_alignBottom="@+id/textView8"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_alignEnd="@+id/textView7"
                android:layout_marginStart="0dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/orderinfoviews"
                android:padding="5dp"
                android:text="Orientation"
                android:textAlignment="center"
                android:textColor="#3D3D3D"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.56"
                tools:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_below="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignEnd="@+id/textView8"
                android:layout_marginStart="0dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/orderinfoviews"
                android:padding="5dp"
                android:text="Both Sides"
                android:textAlignment="center"
                android:textColor="#3D3D3D"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <ToggleButton
                android:id="@+id/bothSidesToggle"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/sizeSpinner"
                android:layout_alignTop="@+id/textView20"
                android:layout_alignEnd="@+id/orientationSpinner"
                android:layout_alignBottom="@+id/textView20"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:text="ToggleButton"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView20"
                app:layout_constraintStart_toStartOf="@+id/customValue1"
                app:layout_constraintTop_toTopOf="@+id/textView20" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_below="@+id/textView20"
                android:layout_alignStart="@+id/textView20"
                android:layout_alignEnd="@+id/textView20"
                android:layout_marginStart="0dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/orderinfoviews"
                android:padding="5dp"
                android:text="Custom"
                android:textAlignment="center"
                android:textColor="#3D3D3D"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />


            <EditText
                android:id="@+id/customValue1"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/bothSidesToggle"
                android:layout_alignTop="@+id/textView12"
                android:layout_alignBottom="@+id/textView12"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:digits="0123456789,-"
                android:ems="10"
                android:hint="1,4,6,etc."
                android:inputType="number"
                android:textSize="12sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/sizeSpinner"
                app:layout_constraintTop_toTopOf="@+id/textView12"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/viewPdfBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView20"
                android:layout_alignEnd="@+id/textView12"
                android:layout_marginStart="0dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/ripple_effect"
                android:text="View Pdf" />

            <EditText
                android:id="@+id/PageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/customValue1"
                android:layout_alignTop="@+id/viewPdfBtn"
                android:layout_alignEnd="@+id/bothSidesToggle"
                android:layout_alignBottom="@+id/viewPdfBtn"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:ems="10"
                android:hint="Page Count"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/customValue2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/customValue1"
                android:layout_alignEnd="@+id/bothSidesToggle"
                android:layout_alignBottom="@+id/customValue1"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="1dp"
                android:ems="10"
                android:hint="1,3,4,5,etc"
                android:inputType="number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/customValue1"
                android:layout_alignBottom="@+id/customValue1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@id/customValue2"
                android:layout_toEndOf="@+id/customValue1"
                android:padding="5dp"
                android:text="to"
                android:textAlignment="center" />


        </RelativeLayout>
    </ScrollView>
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/viewPDF"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:visibility="invisible" />

</RelativeLayout>
