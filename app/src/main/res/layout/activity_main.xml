<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpageback"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/appicon" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_below="@+id/imageView17"
            android:layout_marginTop="25dp">

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_alignTop="@+id/view8"
                android:layout_alignParentStart="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="0dp"
                android:text="Take printouts."
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="0dp"
                android:text="Go mobile."
                android:textColor="#FFF"
                android:textSize="36sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView17"
            android:layout_alignBottom="@+id/imageView17"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/imageView17"
            android:text="Sleefax"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/signIn_Btn"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#FFF"
            android:text="Log in"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/AddfilesBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/signin_btn_round"
            android:backgroundTint="#FFF"
            android:text="Start adding files"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AddfilesBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="or"
            android:textColor="#FFF"
            android:textSize="31sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/privacypolicyBtn"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:background="#00000000"
            android:text="By creating an account you accept the privacy policy and terms of Sleefax."
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>