<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".Pop">

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="733dp"
        android:background="@drawable/rectangle25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="215dp"
            android:layout_marginBottom="8dp"
            android:text="Select document type"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="29sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/selectattachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="303dp"
            android:background="@drawable/ellipse25"
            android:drawableStart="@drawable/attach"
            android:paddingLeft="20dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/attachmentimg"
            android:layout_width="32dp"
            android:layout_height="38dp"
            android:layout_alignStart="@+id/selectattachment"
            android:layout_alignTop="@+id/selectattachment"
            android:layout_alignEnd="@+id/selectattachment"
            android:layout_alignBottom="@+id/selectattachment"
            android:layout_marginStart="123dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/attachment" />

        <Button
            android:id="@+id/selectphotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="301dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/ellipse25"
            android:drawableStart="@drawable/photo_camera"
            android:paddingLeft="18dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/photoimg"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/selectphotos"
            android:layout_alignTop="@+id/selectphotos"
            android:layout_alignEnd="@+id/selectphotos"
            android:layout_alignBottom="@+id/selectphotos"
            android:layout_marginStart="80dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="14dp"
            app:srcCompat="@drawable/photocamera" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>