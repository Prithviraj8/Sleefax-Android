<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".Pop">

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="733dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view4"
            android:layout_width="339dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/status_views" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view4"
            android:layout_alignTop="@+id/view4"
            android:layout_alignEnd="@+id/view4"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="8dp"
            android:text="Select document type"
            android:textAlignment="center"
            android:textColor="#9A000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/selectattachment"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/view4"
            android:layout_alignEnd="@+id/view4"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="161dp"
            android:background="@drawable/attachmentbtn"
            android:text="Attachment"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/attachmentimg"
            android:layout_width="32dp"
            android:layout_height="38dp"
            android:layout_alignStart="@+id/selectattachment"
            android:layout_alignTop="@+id/selectattachment"
            android:layout_alignEnd="@+id/selectattachment"
            android:layout_alignBottom="@+id/selectattachment"
            android:layout_marginStart="123dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/attachment" />

        <Button
            android:id="@+id/selectphotos"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignEnd="@+id/view4"
            android:layout_centerVertical="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/imagebtn"
            android:text="Photos"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/photoimg"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/selectphotos"
            android:layout_alignTop="@+id/selectphotos"
            android:layout_alignEnd="@+id/selectphotos"
            android:layout_alignBottom="@+id/selectphotos"
            android:layout_marginStart="80dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="14dp"
            app:srcCompat="@drawable/photocamera" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>