<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@+id/Distance"
        android:layout_alignStart="@+id/Distance"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/open"
        android:paddingTop="5dp"
        android:text="Open"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/ShopsName"
        android:layout_width="175dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/tv_background"
        android:text="@string/ShopName"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Files"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_below="@+id/Location"
        android:layout_alignStart="@+id/Location"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="114dp"
        android:text="@string/Files" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/Files"
        android:layout_alignStart="@+id/Files"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:text="₹1: B/W   |   ₹5 : Colour"
        android:textColor="#2196F3" />

    <TextView
        android:id="@+id/Distance"
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:text="@string/Distance"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_below="@+id/ShopsName"
        android:layout_alignStart="@+id/ShopsName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:text="@string/Location"
        android:textColor="#5A5757"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="97dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="302dp"
        app:srcCompat="@drawable/shop"
        android:contentDescription="TODO" />

</RelativeLayout>