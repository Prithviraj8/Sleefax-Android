<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportIssue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="61dp"
            android:layout_toEndOf="@+id/backBtn"
            android:text="@string/uh_oh_so_sorry_to_hear_you_have_issue_with_our_app_please_tell_us_what_they_are_and_we_will_try_to_fix_it_as_soon_as_possible"
            android:textColor="#9F000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/IssueTV"
            android:layout_width="371dp"
            android:layout_height="140dp"
            android:layout_below="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Write your issues here."
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/SubmitIssue"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IssueTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            android:text="@string/submit" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/backbtn" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>