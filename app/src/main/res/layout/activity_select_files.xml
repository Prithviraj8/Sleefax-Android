<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineAmbientShadowColor="#FCE30A"
    android:outlineSpotShadowColor="#E7C714"
    tools:context=".Select">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/path342">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="89dp"
            android:text="Add Files"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/AddFilesButton"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/layer2"
            android:clickable="true">

        </Button>

        <RelativeLayout
            android:id="@+id/OrderRelativeL"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:layout_below="@+id/view"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/currentOrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/currentOrderStatusBar"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:text="Order id"
                android:textColor="#BA000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentOrderDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentOrderID"
                android:layout_alignStart="@+id/currentOrderID"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:text="OrderDateTime"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentOrderDateTime"
                android:layout_alignStart="@+id/currentOrderDateTime"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:text="Price" />

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/currentOrderStatusBar"
                android:layout_width="300dp"
                android:layout_height="59dp"
                android:layout_below="@+id/currentOrderPrice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/currentOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentOrderStatusBar"
                android:layout_alignStart="@+id/currentOrderStatusBar"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:text="@string/OrderStatus" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/YourOrders"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:contentDescription="TODO"
            android:drawablePadding="5dp"
            android:src="@drawable/yourordersbtn" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:src="@drawable/settingsbtn"
            tools:background="@drawable/ripple_effect" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>