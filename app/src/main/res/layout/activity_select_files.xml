<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectfiles"
    android:outlineAmbientShadowColor="#FCE30A"
    android:outlineSpotShadowColor="#E7C714"
    tools:context=".Select">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selecfiles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/AddFilesButton"
            android:layout_width="213dp"
            android:layout_height="190dp"
            android:layout_above="@+id/YourOrders"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"

            android:layout_marginTop="228dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="238dp"
            android:background="#00FFFFFF"
            android:clickable="true" />


        <ImageButton
            android:id="@+id/settings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/YourOrders"
            android:layout_alignBottom="@+id/YourOrders"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:contentDescription="TODO"
            android:drawablePadding="5dp"
            android:src="@drawable/settingsbtn" />

        <ImageButton
            android:id="@+id/YourOrders"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:src="@drawable/yourordersbtn"
            tools:background="@drawable/ripple_effect" />

        <ImageButton
            android:id="@+id/help"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/YourOrders"
            android:layout_alignBottom="@+id/YourOrders"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:src="@drawable/helpbtnimg"
            tools:background="@drawable/ripple_effect" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>