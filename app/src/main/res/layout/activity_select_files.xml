<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectfiles"
    android:outlineAmbientShadowColor="#FCE30A"
    android:outlineSpotShadowColor="#E7C714"
    tools:context=".Select">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selecfiles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progress"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/AddFilesButton"
            android:layout_alignTop="@+id/AddFilesButton"
            android:layout_alignEnd="@+id/AddFilesButton"
            android:layout_alignBottom="@+id/AddFilesButton"
            android:layout_gravity="center"
            android:layout_marginStart="19dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="31dp"
            android:visibility="invisible"
            app:SpinKit_Color="#31B82A" />

        <Button
            android:id="@+id/AddFilesButton"
            android:layout_width="228dp"
            android:layout_height="220dp"
            android:layout_above="@+id/YourOrders"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"

            android:layout_marginTop="200dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="226dp"
            android:background="#00FFFFFF" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/YourOrders"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="25dp"
            android:background="#00FFFFFF"
            android:src="@drawable/actsettings"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/YourOrders"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="25dp"
            android:background="#00FFFFFF"
            android:src="@drawable/yourordersimg"/>

        <ImageButton
            android:id="@+id/help"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/YourOrders"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="25dp"
            android:background="#00FFFFFF"
            android:src="@drawable/helpbtnimg" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>