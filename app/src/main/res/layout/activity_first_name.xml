<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstNameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:background="@drawable/storesview" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/view"
            android:layout_alignBottom="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="-50dp"
            app:srcCompat="@drawable/logo1" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="23dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:drawableTop="@drawable/w" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:foregroundGravity="center_horizontal"
            android:text="A little more about yourself."
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/numberTV"
            android:layout_width="270dp"
            android:layout_height="42dp"
            android:layout_below="@+id/FirstNameTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:autofillHints=""
            android:background="@drawable/textfield"
            android:ems="10"
            android:hint="@string/your_number"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="#808080" />

        <AutoCompleteTextView
            android:id="@+id/FirstNameTV"
            android:layout_width="270dp"
            android:layout_height="42dp"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:background="@drawable/textfield"
            android:hint="@string/your_name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080" />

        <Button
            android:id="@+id/FirstNameButton"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_below="@+id/numberTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/signin_btn_round"
            android:backgroundTint="#FFF"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>