<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F4F4"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="30dp"
        android:id="@+id/orderRowRL">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/pdfName"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="#367E95"
            android:text="Analysis Report.pdf"
            android:fontFamily="@font/poppins_semibold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pdfName"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:id="@+id/infoLV1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pageSize"
                android:text="Page Size : A4"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="#332F2F"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pageOrientation"
                android:text="Orientation: Potrait"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="#332F2F"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FileType"
                android:text="File Type: pdf"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="#332F2F"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pdfName"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:id="@+id/infoLV2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Color"
                android:text="Colour type: b/w"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="#332F2F"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pdfCopies"
                android:text="Copies : 2"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="#332F2F"/>


        </LinearLayout>

        <Button
            android:id="@+id/ViewFileBtn"
            android:layout_width="100dp"
            android:layout_height="21dp"
            android:layout_below="@id/infoLV1"
            android:layout_alignStart="@id/infoLV2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:background="#00FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:linksClickable="true"
            android:selectAllOnFocus="false"
            android:text="@string/ViewFile"
            android:textColor="#367E95"
            android:textSize="13sp" />


    </RelativeLayout>

</RelativeLayout>