<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/helpView"
            android:layout_width="355dp"
            android:layout_height="196dp"
            android:layout_centerInParent="true"
            android:background="@drawable/status_views" />

        <ImageView
            android:id="@+id/HelpIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/help" />

        <Button
            android:id="@+id/Contacts"
            android:layout_width="340dp"
            android:layout_height="62dp"
            android:layout_below="@+id/ReportIssueBtn"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:background="#00000000"
            android:text="Contact Us"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/contactImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/Contacts"
            android:layout_alignTop="@+id/Contacts"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/contact" />

        <Button
            android:id="@+id/ReportIssueBtn"
            android:layout_width="340dp"
            android:layout_height="62dp"
            android:layout_alignTop="@+id/helpView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="#00000000"
            android:text="Report An Issue"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/reportIssueImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/ReportIssueBtn"
            android:layout_alignTop="@+id/ReportIssueBtn"
            android:layout_alignBottom="@+id/ReportIssueBtn"
            android:layout_marginStart="2dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/reportissueimg" />

        <Button
            android:id="@+id/FeedbackBtn"
            android:layout_width="340dp"
            android:layout_height="62dp"
            android:layout_below="@+id/Contacts"
            android:layout_alignBottom="@+id/helpView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="0dp"
            android:background="#00000000"
            android:text="Feedback"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/feedbackImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/FeedbackBtn"
            android:layout_alignTop="@+id/FeedbackBtn"
            android:layout_alignBottom="@+id/helpView"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/feedback" />

        <TextView
            android:id="@+id/helpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HelpIMG"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-1dp"
            android:text="Help"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/backbtn" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>