<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Page"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="669dp"
                    android:layout_marginEnd="257dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/fileinfobtn"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/PageSettingIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/pagesettingimg" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PageSettingIMG"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Page Settings"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Select Colour Format"
            android:textAlignment="center"
            android:textColor="#5C5A5A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="184dp"
            android:layout_height="202dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/black_white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_white_view_backgroud" />

        <View
            android:id="@+id/colors"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textView6"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/black_white"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/colors_view_background" />

        <TextView
            android:id="@+id/copiesTV"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_below="@+id/black_white"
            android:layout_marginStart="72dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/PageSettingIMG"
            android:text="@string/Copies"
            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/CopiesText"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_below="@+id/colors"
            android:layout_alignBottom="@+id/copiesTV"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/PageSettingIMG"
            android:ems="10"
            android:hint="@string/Copies"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pageSIzeTV"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_below="@+id/copiesTV"
            android:layout_marginStart="72dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/PageSettingIMG"
            android:text="Page Size"

            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/pageSizesDropDown"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_below="@+id/CopiesText"
            android:layout_alignBottom="@+id/pageSIzeTV"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="-4dp"
            android:layout_toEndOf="@+id/PageSettingIMG"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/orientationTV"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_below="@+id/pageSIzeTV"
            android:layout_marginStart="72dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/PageSettingIMG"

            android:text="Orientation"
            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/h"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@+id/pageSizesDropDown"
            android:layout_alignBottom="@+id/orientationTV"
            android:layout_marginStart="3dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/PageSettingIMG"
            android:background="@drawable/orientation" />

        <TextView
            android:id="@+id/orH"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/h"
            android:layout_alignTop="@+id/h"
            android:layout_alignEnd="@+id/h"
            android:layout_alignBottom="@+id/h"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:text="H"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:id="@+id/v"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@+id/pageSizesDropDown"
            android:layout_alignEnd="@+id/pageSizesDropDown"
            android:layout_alignBottom="@+id/h"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/orientation" />

        <TextView
            android:id="@+id/orV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/v"
            android:layout_alignTop="@+id/v"
            android:layout_alignEnd="@+id/v"
            android:layout_alignBottom="@+id/v"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:text="V"
            android:textAlignment="center"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>