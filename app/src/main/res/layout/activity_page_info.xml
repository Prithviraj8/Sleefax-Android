<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#FFF">

        <ImageView
            android:id="@+id/PageSettingIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/pagesettingimg" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="483dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#FFF"
            android:layout_marginStart="0dp"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/pageview" />

        <Button
            android:id="@+id/imagesDone"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Done"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="184dp"
            android:layout_height="202dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/leftarr"
            android:layout_width="43dp"
            android:layout_height="53dp"
            android:layout_below="@+id/previmageTV"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/imageView"
            app:srcCompat="@drawable/leftuparr" />

        <ImageView
            android:id="@+id/rightarr"
            android:layout_width="47dp"
            android:layout_height="51dp"
            android:layout_below="@+id/nextimageTV"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/imageView"
            app:srcCompat="@drawable/rightuparr" />

        <Button
            android:id="@+id/previousImg"
            android:layout_width="73dp"
            android:layout_height="202dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/PageSettingIMG"
            android:background="#00FFFFFF" />

        <Button
            android:id="@+id/nextImg"
            android:layout_width="67dp"
            android:layout_height="202dp"
            android:layout_below="@+id/textView5"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/PageSettingIMG"
            android:background="#00FFFFFF" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/black_white"
            android:layout_alignTop="@+id/black_white"
            android:layout_alignEnd="@+id/black_white"
            android:layout_alignBottom="@+id/black_white"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/bwimg" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/colors"
            android:layout_alignTop="@+id/colors"
            android:layout_alignEnd="@+id/colors"
            android:layout_alignBottom="@+id/colors"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/colorimg" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PageSettingIMG"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Page Settings"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Select Colour Format"
            android:textAlignment="center"
            android:textColor="#5C5A5A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/black_white"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:background="#00FFFFFF" />

        <View
            android:id="@+id/colors"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textView6"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/black_white"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="3dp"
            android:background="#00FFFFFF" />

        <TextView
            android:id="@+id/copiesTV"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_below="@+id/black_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/page_info_views"
            android:padding="5dp"
            android:text="@string/Copies"
            android:textAlignment="viewStart"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/CopiesText"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/copiesTV"
            android:layout_alignEnd="@+id/copiesTV"
            android:layout_alignBottom="@+id/copiesTV"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/copytv"
            android:ems="10"
            android:hint="@string/Copies"
            android:inputType="number"
            android:padding="1dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pageSIzeTV"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/copiesTV"
            android:layout_alignStart="@+id/copiesTV"

            android:layout_alignEnd="@+id/copiesTV"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/page_info_views"
            android:padding="5dp"
            android:text="Page Size"
            android:textAlignment="viewStart"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/pageSizesDropDown"
            android:layout_width="82dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/CopiesText"
            android:layout_alignTop="@+id/pageSIzeTV"
            android:layout_alignEnd="@+id/pageSIzeTV"
            android:layout_alignBottom="@+id/pageSIzeTV"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/copytv"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/orientationTV"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/pageSIzeTV"
            android:layout_alignStart="@+id/pageSIzeTV"

            android:layout_alignEnd="@+id/pageSIzeTV"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/page_info_views"
            android:padding="5dp"
            android:text="Orientation"
            android:textAlignment="viewStart"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/h"
            android:layout_alignTop="@+id/orientationTV"
            android:layout_alignEnd="@+id/orientationTV"
            android:layout_alignBottom="@+id/orientationTV"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/copytv" />

        <View
            android:id="@+id/h"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/pageSizesDropDown"
            android:layout_alignTop="@+id/orientationTV"
            android:layout_alignBottom="@+id/orientationTV"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp"
            android:layout_toStartOf="@id/v"
            android:background="@drawable/orientation" />

        <TextView
            android:id="@+id/orH"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/h"
            android:layout_alignTop="@+id/h"
            android:layout_alignEnd="@+id/h"
            android:layout_alignBottom="@+id/h"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="H"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:id="@+id/v"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/h"
            android:layout_alignEnd="@+id/pageSizesDropDown"
            android:layout_alignBottom="@+id/h"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/orientation" />

        <TextView
            android:id="@+id/orV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/v"
            android:layout_alignTop="@+id/v"
            android:layout_alignEnd="@+id/v"
            android:layout_alignBottom="@+id/v"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:text="V"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/previmageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:text="Prev. image" />

        <TextView
            android:id="@+id/nextimageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="29dp"
            android:text="Next image" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/orientationTV"
            android:layout_alignStart="@+id/orientationTV"
            android:layout_alignEnd="@+id/orientationTV"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/page_info_views"
            android:padding="5dp"
            android:text="Both Sides"
            android:textAlignment="viewStart"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/bothSidesToggle"
            android:layout_width="104dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/h"
            android:layout_alignTop="@+id/textView20"
            android:layout_alignEnd="@+id/textView20"
            android:layout_alignBottom="@+id/textView20"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/copytv"
            android:text="ToggleButton"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pageSizesDropDown"
            android:layout_alignEnd="@+id/pageSIzeTV"
            android:layout_alignBottom="@+id/pageSizesDropDown"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/downarr" />

    </RelativeLayout>

</ScrollView>