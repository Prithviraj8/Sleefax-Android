<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context=".OrderPlaced">

    <RelativeLayout
        android:id="@+id/relativeL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/topview"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/storesview" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="491dp"
            android:layout_below="@+id/status4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/pageview" />

        <View
            android:id="@+id/view10"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_below="@+id/status2"
            android:layout_alignStart="@+id/circularProgressBar"
            android:layout_alignEnd="@+id/circularProgressBar"
            android:layout_alignBottom="@+id/circularProgressBar"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/orderprogressback" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/view10"
            android:layout_alignTop="@+id/view10"
            android:layout_alignEnd="@+id/view10"
            android:layout_alignBottom="@+id/view10"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/statusPercent"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                android:text="@string/_12"
                android:textAlignment="center"
                android:textColor="#252323"
                android:textColorLink="#C8000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/status2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="102dp"
            app:cpb_background_progressbar_color="#b6bbd8"
            app:cpb_background_progressbar_width="8dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#3f51b5"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false" />

        <View
            android:id="@+id/OrderDetailsView"
            android:layout_width="358dp"
            android:layout_height="174dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/orderdetailsview" />

        <TextView
            android:id="@+id/status1"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_below="@+id/circularProgressBar"
            android:layout_alignStart="@+id/circularProgressBar"
            android:layout_alignEnd="@+id/circularProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/status_views"
            android:padding="5dp"
            android:text="Placing Order"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/OrderStatusTV"
            android:layout_alignBottom="@+id/OrderStatusTV"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#00FFFFFF"
            android:src="@drawable/w" />

        <TextView
            android:id="@+id/status2"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_below="@+id/topview"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/status_views"
            android:padding="5dp"
            android:text="Placing Order"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/helpbtn"
            android:layout_width="43dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/OrderStatusTV"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="17dp"
            android:background="#00000000"
            app:srcCompat="@drawable/ihelpimg" />

        <TextView
            android:id="@+id/OrderStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="@string/OrderStatus"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/Directions"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_below="@+id/status1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="47dp"
            android:background="#00000000"
            android:shadowColor="#EC1212"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="10"
            android:src="@drawable/directionsbtn"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="131dp"
            android:layout_height="39dp"
            android:layout_above="@+id/OrderDetailsView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-5dp"
            android:background="@drawable/orderdetailstv"
            android:padding="8dp"
            android:shadowColor="#312E2E"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="50"
            android:text="Order Details"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status4"
            android:layout_width="93dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/circularProgressBar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/status_views"
            android:padding="5dp"
            android:text="Order ready"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/callBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/Directions"
            android:layout_alignBottom="@+id/Directions"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/callbtn"
            android:text="Button" />

        <TextView
            android:id="@+id/status3"
            android:layout_width="93dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/circularProgressBar"
            android:layout_alignBottom="@+id/status4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/status_views"
            android:padding="5dp"
            android:text="In process"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@+id/Directions"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/directionview"
            android:padding="6dp"
            android:text="Directions"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/textView21"
            android:layout_alignBottom="@+id/textView21"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/callshopview"
            android:padding="6dp"
            android:text="Shopkeeper"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/OrderShop"
            android:layout_width="272dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/OrderDetailsView"
            android:layout_alignTop="@+id/OrderDetailsView"
            android:layout_marginStart="23dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Shop Name :"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OrderLoc"
            android:layout_width="157dp"
            android:layout_height="24dp"
            android:layout_below="@+id/OrderShop"
            android:layout_alignStart="@+id/OrderShop"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:text="Location"
            android:textColor="#252424"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/OrderFiles"
            android:layout_width="269dp"
            android:layout_height="30dp"
            android:layout_below="@+id/OrderLoc"
            android:layout_alignStart="@+id/OrderLoc"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="Files"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderID"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/OrderFiles"
            android:layout_alignStart="@+id/OrderFiles"
            android:layout_alignEnd="@+id/OrderDetailsView"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:text="ORDER ID"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OrderPrice"
            android:layout_width="152dp"
            android:layout_height="30dp"
            android:layout_below="@+id/orderID"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/orderpriceview"
            android:padding="5dp"
            android:text="Amount"
            android:textAlignment="center"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>