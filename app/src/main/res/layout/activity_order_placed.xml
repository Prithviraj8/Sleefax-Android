                    android:text="₹ 12"
                    android:textColor="#229440"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/File4TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/File3TV"
                    android:layout_alignEnd="@+id/File1TV"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="File.pdf 1 "
                    android:textColor="#000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/FilePrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/File3TV"
                    android:layout_alignEnd="@+id/FilePrice1"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="₹ 12"
                    android:textColor="#229440"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/File5TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/File4TV"
                    android:layout_alignEnd="@+id/File1TV"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="File.pdf 1 "
                    android:textColor="#000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/FilePrice5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/File4TV"
