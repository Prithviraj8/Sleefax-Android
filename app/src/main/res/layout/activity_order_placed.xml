<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPlaced">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/OrderDetailsView"
            android:layout_width="358dp"
            android:layout_height="174dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:background="@drawable/orderdetailsview" />

        <ProgressBar
            android:id="@+id/OrderProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_below="@+id/OrderStatusTV"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="8dp"
            android:progressDrawable="@drawable/colorprogressred"
            android:visibility="visible" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="201dp"
            android:layout_height="231dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="203dp"
            android:layout_marginEnd="102dp"
            app:cpb_background_progressbar_color="#b6bbd8"
            app:cpb_background_progressbar_width="8dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#3f51b5"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false" />

        <TextView
            android:id="@+id/statusPercent"
            android:layout_width="92dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/circularProgressBar"
            android:layout_alignBottom="@+id/circularProgressBar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="159dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="72dp"
            android:padding="15dp"
            android:text="12%"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status1"
            android:layout_width="155dp"
            android:layout_height="39dp"
            android:layout_below="@+id/circularProgressBar"
            android:layout_alignStart="@+id/circularProgressBar"
            android:layout_alignEnd="@+id/circularProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/status_views"
            android:text="Order Placed"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/backbtn" />

        <TextView
            android:id="@+id/status2"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_above="@+id/status4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/status_views"
            android:text="Order Received"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/OrderShop"
            android:layout_width="272dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/OrderDetailsView"
            android:layout_alignTop="@+id/OrderDetailsView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="Shop Name :"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OrderPrice"
            android:layout_width="272dp"
            android:layout_height="30dp"
            android:layout_below="@+id/OrderFiles"
            android:layout_alignStart="@+id/OrderDetailsView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="43dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/imageView6"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="19dp"
            android:background="#00000000"
            app:srcCompat="@drawable/helpimg" />

        <TextView
            android:id="@+id/OrderStatusTV"
            android:layout_width="170dp"
            android:layout_height="34dp"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="Order Status."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/Directions"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/circularProgressBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="23dp"
            android:background="#00000000"
            android:shadowColor="#EC1212"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="10"
            android:src="@drawable/directions"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/OrderFiles"
            android:layout_width="269dp"
            android:layout_height="30dp"
            android:layout_below="@+id/OrderLoc"
            android:layout_alignStart="@+id/OrderDetailsView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/OrderDetailsView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Order Details"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OrderLoc"
            android:layout_width="157dp"
            android:layout_height="24dp"
            android:layout_below="@+id/OrderShop"
            android:layout_alignStart="@+id/OrderDetailsView"
            android:layout_marginStart="89dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="#252424"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/orderstatusimg" />

        <TextView
            android:id="@+id/status4"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="237dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/OrderProgressBar"
            android:background="@drawable/status_views"
            android:text="Order ready"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:layout_below="@+id/circularProgressBar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/call"
            android:text="Button" />

        <TextView
            android:id="@+id/status3"
            android:layout_width="108dp"
            android:layout_height="32dp"
            android:layout_below="@+id/backBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="211dp"
            android:layout_marginEnd="31dp"
            android:layout_toStartOf="@+id/OrderProgressBar"
            android:background="@drawable/status_views"
            android:text="In process"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="invisible" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>