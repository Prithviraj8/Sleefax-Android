                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="₹ 12"
                    android:textColor="#229440"
                    android:visibility="gone" />


                <View
                    android:id="@+id/view30"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/OrderDetailsLV"
                    android:layout_marginTop="2dp"
                    android:background="#818181" />

                <TextView
                    android:id="@+id/OrderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/view30"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="5dp"
                    android:text="₹ 12"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/OrderPrice"
                    android:layout_alignBottom="@+id/OrderPrice"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Total"
                    android:textColor="#000000" />

            </RelativeLayout>

            <Button
                android:id="@+id/OrderDetailsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/OrderDetailsRL"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:fontFamily="@font/poppins_semibold"
                android:text="Show Full Details"
                android:textColor="#227093"
                android:textSize="16sp" />

